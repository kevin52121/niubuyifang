            <div class="admin-controls">
                <button class="admin-toggle" id="adminToggle">ç®¡ç†å‘˜</button>
                <div class="upload-section" id="uploadSection">
                    <h3 class="upload-title">ä¸Šä¼ æ–°å“</h3>
                    <form class="upload-form" id="uploadForm">
                        <div class="form-group">
                            <label for="productImage">å•†å“å›¾ç‰‡</label>
                            <div class="upload-image-container" id="imageUploadContainer">
                                <img id="imagePreview" class="upload-image-preview" style="display: none;">
                                <div class="upload-image-placeholder" id="imagePlaceholder">
                                    + é€‰æ‹©å›¾ç‰‡
                                </div>
                                <input type="file" id="productImage" accept="image/*" style="display: none;">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="productName">å•†å“åç§°</label>
                            <input type="text" id="productName" placeholder="è¯·è¾“å…¥å•†å“åç§°" required>
                        </div>
                        <div class="form-group">
                            <label for="productPrice">å•†å“ä»·æ ¼</label>
                            <input type="number" id="productPrice" placeholder="è¯·è¾“å…¥ä»·æ ¼" min="0" step="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="productDesc">å•†å“æè¿° (å¯é€‰)</label>
                            <textarea id="productDesc" rows="2" placeholder="è¯·è¾“å…¥å•†å“æè¿°"></textarea>
                        </div>
                        <button type="submit" class="upload-btn">ä¸Šä¼ å•†å“</button>
                    </form>
                </div>
            </div>
            <h1>å¦å¸ƒè¡£åŠ</h1>
            <div class="subtitle">å½“å­£LOOKå±•ç¤º</div>
        </header>
        
        <div class="gallery" id="productGallery">
            <!-- å•†å“å°†é€šè¿‡JavaScriptåŠ¨æ€æ·»åŠ  -->
            <div class="empty-state">
                <div class="empty-icon">ğŸ›ï¸</div>
                <p>æš‚æ— å•†å“ï¼Œè¯·ç®¡ç†å‘˜æ·»åŠ æ–°å“</p>
            </div>
        </div>
        
        <footer>
            &copy; 2023 å¦å¸ƒè¡£åŠ ç‰ˆæƒæ‰€æœ‰
        </footer>
    </div>
    
    <!-- å¯†ç éªŒè¯æ¨¡æ€æ¡† -->
    <div class="modal" id="passwordModal">
        <div class="modal-content">
            <h3 class="modal-title">ç®¡ç†å‘˜éªŒè¯</h3>
            <div class="form-group password-input">
                <input type="password" id="adminPassword" placeholder="è¯·è¾“å…¥ç®¡ç†å‘˜å¯†ç ">
            </div>
            <div class="modal-actions">
                <button type="button" class="modal-btn cancel-btn" id="cancelPassword">å–æ¶ˆ</button>
                <button type="button" class="modal-btn save-btn" id="confirmPassword">ç¡®è®¤</button>
            </div>
        </div>
    </div>
    
    <!-- ç¼–è¾‘æ¨¡æ€æ¡† -->
    <div class="modal" id="editModal">
        <div class="modal-content">
            <h3 class="modal-title">ç¼–è¾‘å•†å“ä¿¡æ¯</h3>
            <form id="editForm">
                <div class="form-group">
                    <label for="editName">å•†å“åç§°</label>
                    <input type="text" id="editName" required>
                </div>
                <div class="form-group">
                    <label for="editPrice">å•†å“ä»·æ ¼</label>
                    <input type="number" id="editPrice" min="0" step="0.01" required>
                </div>
                <div class="modal-actions">
                    <button type="button" class="modal-btn cancel-btn" id="cancelEdit">å–æ¶ˆ</button>
                    <button type="submit" class="modal-btn save-btn">ä¿å­˜</button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
        // å­˜å‚¨å•†å“æ•°æ®
        let products = [];
        let currentEditIndex = -1;
        let isAdmin = false;
        const ADMIN_PASSWORD = "123456"; // ç®¡ç†å‘˜å¯†ç 
        
        // DOMå…ƒç´ 
        const gallery = document.getElementById('productGallery');
        const uploadForm = document.getElementById('uploadForm');
        const editForm = document.getElementById('editForm');
        const imageUploadContainer = document.getElementById('imageUploadContainer');
        const imageInput = document.getElementById('productImage');
        const imagePreview = document.getElementById('imagePreview');
        const imagePlaceholder = document.getElementById('imagePlaceholder');
        const uploadSection = document.getElementById('uploadSection');
        const adminToggle = document.getElementById('adminToggle');
        const passwordModal = document.getElementById('passwordModal');
        const adminPasswordInput = document.getElementById('adminPassword');
        const confirmPasswordBtn = document.getElementById('confirmPassword');
        const cancelPasswordBtn = document.getElementById('cancelPassword');
        const editModal = document.getElementById('editModal');
        const cancelEditBtn = document.getElementById('cancelEdit');
        
        // åˆå§‹åŒ–é¡µé¢
        document.addEventListener('DOMContentLoaded', function() {
            // ä»localStorageåŠ è½½å•†å“æ•°æ®
            loadProducts();
            renderProducts();
            
            // å›¾ç‰‡ä¸Šä¼ ç‚¹å‡»äº‹ä»¶
            imageUploadContainer.addEventListener('click', function() {
                if (!isAdmin) return;
                imageInput.click();
            });
            
            // å›¾ç‰‡é€‰æ‹©å˜åŒ–äº‹ä»¶
            imageInput.addEventListener('change', function(e) {
                if (e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        imagePreview.src = event.target.result;
                        imagePreview.style.display = 'block';
                        imagePlaceholder.style.display = 'none';
                    };
                    reader.readAsDataURL(e.target.files[0]);
                }
            });
            
            // è¡¨å•æäº¤äº‹ä»¶
            uploadForm.addEventListener('submit', function(e) {
                e.preventDefault();
                if (!isAdmin) return;
                addNewProduct();
            });
            
            editForm.addEventListener('submit', function(e) {
                e.preventDefault();
                if (!isAdmin) return;
                saveProductChanges();
            });
            
            // ç®¡ç†å‘˜æŒ‰é’®ç‚¹å‡»äº‹ä»¶
            adminToggle.addEventListener('click', function() {
                if (isAdmin) {
                    logoutAdmin();
                } else {
                    passwordModal.style.display = 'flex';
                }
            });
            
            // å¯†ç ç¡®è®¤æŒ‰é’®
            confirmPasswordBtn.addEventListener('click', function() {
                if (adminPasswordInput.value === ADMIN_PASSWORD) {
                    loginAdmin();
                } else {
                    alert('å¯†ç é”™è¯¯');
                }
            });
            
            cancelPasswordBtn.addEventListener('click', function() {
                passwordModal.style.display = 'none';
                adminPasswordInput.value = '';
            });
            
            cancelEditBtn.addEventListener('click', closeModal);
        });
        
        // ä»localStorageåŠ è½½å•†å“æ•°æ®
        function loadProducts() {
            const savedProducts = localStorage.getItem('niubuyifang-products');
            if (savedProducts) {
                products = JSON.parse(savedProducts);
            }
        }
        
        // ä¿å­˜å•†å“æ•°æ®åˆ°localStorage
        function saveProducts() {
            localStorage.setItem('niubuyifang-products', JSON.stringify(products));
        }
        
        // ç®¡ç†å‘˜ç™»å½•
        function loginAdmin() {
            isAdmin = true;
            adminToggle.textContent = 'é€€å‡ºç®¡ç†';
            uploadSection.classList.add('visible');
            document.body.classList.add('edit-mode');
            passwordModal.style.display = 'none';
            adminPasswordInput.value = '';
            renderProducts();
        }
        
        // ç®¡ç†å‘˜é€€å‡º
        function logoutAdmin() {
            isAdmin = false;
            adminToggle.textContent = 'ç®¡ç†å‘˜';
            uploadSection.classList.remove('visible');
            document.body.classList.remove('edit-mode');
            renderProducts();
        }
        
        // æ¸²æŸ“å•†å“åˆ—è¡¨
        function renderProducts() {
            gallery.innerHTML = '';
            
            if (products.length === 0) {
                gallery.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">ğŸ›ï¸</div>
                        <p>${isAdmin ? 'æš‚æ— å•†å“ï¼Œè¯·æ·»åŠ æ–°å“' : 'æš‚æ— å•†å“ï¼Œè¯·ç®¡ç†å‘˜æ·»åŠ æ–°å“'}</p>
                    </div>
                `;
                return;
            }
            
            products.forEach((product, index) => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image-container">
                        <img src="${product.image}" alt="${product.name}" class="product-image">
                    </div>
                    <div class="product-info">
                        <h3 class="product-title">${product.name}</h3>
                        <div class="product-price">
                            <span class="price">Â¥${product.price.toFixed(2)}</span>
                            <button class="edit-btn" data-index="${index}">ç¼–è¾‘</button>
                        </div>
                    </div>
                `;
                
                // æ·»åŠ ç¼–è¾‘æŒ‰é’®äº‹ä»¶
                const editBtn = productCard.querySelector('.edit-btn');
                editBtn.addEventListener('click', function() {
                    if (!isAdmin) return;
                    openEditModal(index);
                });
                
                gallery.appendChild(productCard);
            });
        }
        
        // æ·»åŠ æ–°å•†å“
        function addNewProduct() {
            const nameInput = document.getElementById('productName');
            const priceInput = document.getElementById('productPrice');
            const descInput = document.getElementById('productDesc');
            
            if (!nameInput.value || !priceInput.value || !imageInput.files[0]) {
                alert('è¯·å¡«å†™å®Œæ•´ä¿¡æ¯å¹¶ä¸Šä¼ å›¾ç‰‡');
                return;
            }
            
            const newProduct = {
                name: nameInput.value,
                price: parseFloat(priceInput.value),
                desc: descInput.value || '',
                image: imagePreview.src
            };
            
            products.push(newProduct);
            saveProducts(); // ä¿å­˜åˆ°localStorage
            renderProducts();
            
            // é‡ç½®è¡¨å•
            uploadForm.reset();
            imagePreview.style.display = 'none';
            imagePlaceholder.style.display = 'flex';
            imagePreview.src = '';
            
            alert('å•†å“å·²æˆåŠŸæ·»åŠ ï¼');
        }
        
        // æ‰“å¼€ç¼–è¾‘æ¨¡æ€æ¡†
        function openEditModal(index) {
            currentEditIndex = index;
            const product = products[index];
            
            document.getElementById('editName').value = product.name;
            document.getElementById('editPrice').value = product.price;
            
            editModal.style.display = 'flex';
        }
        
        // å…³é—­æ¨¡æ€æ¡†
        function closeModal() {
            editModal.style.display = 'none';
        }
        
        // ä¿å­˜å•†å“ä¿®æ”¹
        function saveProductChanges() {
            if (currentEditIndex === -1) return;
            
            const nameInput = document.getElementById('editName');
            const priceInput = document.getElementById('editPrice');
            
            if (!nameInput.value || !priceInput.value) {
                alert('è¯·å¡«å†™å®Œæ•´ä¿¡æ¯');
                return;
            }
            
            products[currentEditIndex].name = nameInput.value;
            products[currentEditIndex].price = parseFloat(priceInput.value);
            
            saveProducts(); // ä¿å­˜åˆ°localStorage
            renderProducts();
            closeModal();
            
            alert('ä¿®æ”¹å·²ä¿å­˜ï¼');
        }
    </script>
</body>
